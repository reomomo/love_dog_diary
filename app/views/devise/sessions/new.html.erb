<div class="container_fuluid other-images jumbotron m-0" style="width: 100%; min-height: 600px;">
  <!--画面幅 768px 以上-->
  <div class="d-none d-md-block">
    <div class="row justify-content-center">
      <div class="col-xl-5 col-lg-6 col-8 beige-box p-4">
        <div class="row">
          <div class="col-md-6 m-4">
            <h3 class="text-center border-bottom border-green-10">ログイン</h3>
          </div>
        </div>
        <div class="row m-4 justify-content-center">
          <div class="col-md-12">
            <%= form_with model: @user, url: user_session_path do |f| %>
              <table class="table table-borderless ml-5">
                <tr>
                  <th class="px-0">ユーザーネーム</th>
                  <td class="px-0"><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %></td>
                </tr>
                <tr>
                  <th class="px-0">パスワード</th>
                  <td class="px-0"><%= f.password_field :password, autocomplete: "current-password" %></td>
                </tr>
                <tr>
                  <th class="px-0"></th>
                  <td class="px-0">
                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me %>
                        <%= f.label :次回から入力を省略 %>
                      </div>
                    <% end %>
                  </td>
                </tr>
                <tr class="pt-5">
                  <td class="pt-5 px-0"><%= f.submit "ログイン", class: "btn btn-pink2 font-weight-bold text-green" %></td>
                </tr>
                <tr class="pt-5">
                  <td colspan="2" class="pt-5 px-0"><%= render "devise/shared/links" %></td>
                </tr>
              </table>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!--画面幅 768px 未満-->
  <div class="d-block d-md-none">
    <div class="row justify-content-center">
      <div class="beige-box m-0auto py-5 px-4" style="width: 80%;">
        <div class="row justify-content-center">
          <div class="col-sm-6 col-10 m-4">
            <h3 class="text-center border-bottom border-green-10">ログイン</h3>
          </div>
        </div>
        <div class="row justify-content-center">
          <%= form_with model: @user, url: user_session_path do |f| %>
            <div class="col-12">
              <div class="text-left">ユーザーネーム</div>
              <div class="text-right"><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %></div>
              <div class="text-left">パスワード</div>
              <div class="text-right"><%= f.password_field :password, autocomplete: "current-password" %></div>
              <% if devise_mapping.rememberable? %>
                <div class="text-right">
                  <%= f.check_box :remember_me %>
                  <%= f.label :次回から入力を省略 %>
                </div>
              <% end %>
              <div class="my-4 text-right"><%= f.submit "ログイン", class: "btn btn-pink2 font-weight-bold text-green" %></div>
              <div class="mb-4 text-right"><%= render "devise/shared/links" %></div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>