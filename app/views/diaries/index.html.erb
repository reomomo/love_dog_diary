<% if current_user.my_dogs.length >= 2 %>
  <h3>愛犬ごとにカレンダーが表示されます</h3>
  <p>それぞれのカレンダーの日付を選択して、日記を作成してください</p>
<% end %>

<!--愛犬ごとのカレンダー表示-->
<% @my_dogs.each do |my_dog| %>
  <%= my_dog.name %>
  <%= month_calendar do |date| %>
    <!--カレンダーで選択した日付に日記があればその日記ページへ-->
    <% if Diary.where(diary_date: date.strftime("%Y年%-m月%-d日"), my_dog_id: my_dog.id ).exists? %>
      <%= link_to date.day, diary_path(my_dog.diaries.find_by(diary_date: date.strftime("%Y年%-m月%-d日")).id) %>
      <%= image_tag('food.png') %>
      <%= Diary.find_by(diary_date: date.strftime("%Y年%-m月%-d日"), my_dog_id: my_dog.id ).appetite_i18n %>
      <%= image_tag('dooky.png') %>
      <%= Diary.find_by(diary_date: date.strftime("%Y年%-m月%-d日"), my_dog_id: my_dog.id ).excreta_i18n %>
    <% else %>
    <!--日記が無ければ新規登録ページへ（カレンダーで選択した日付データも送信する）-->
      <%= link_to date.day, new_diary_path(date: date.strftime("%Y年%-m月%-d日"), dog_id: my_dog.id) %>
    <% end %>

  <% end %>
<% end %>