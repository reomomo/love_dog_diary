<h1><%= @diary.diary_date %>の日記</h1>

<p>今日のひとこと</p>
<%= image_tag @diary.my_dog.get_dog_image(80,80) %>
<%= @diary.my_dog.name %>
<%= @diary.memo %>
<%= @diary.appetite_i18n %>
<%= @diary.excreta_i18n %>

<%= form_with model: @diary do |f| %>
  <%= f.select :appetites, options_for_select(Diary.appetites_i18n.invert, { :selected => @diary.appetite }) %>

  <%= f.submit "変更" %>
<% end %>


<h4>写真の追加</h4>
<%= form_with model: @photo do |f| %>
  <div>
    <p>タイトル</p>
    <%= f.text_field :title %>
    <p>コメント</p>
    <%= f.text_area :body %>
    <p>写真</p>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.submit "保存" %>
  </div>
<% end %>